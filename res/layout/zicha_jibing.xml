<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        
        <FrameLayout 
	        android:id="@+id/main_tab_banner"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dip"
	        android:paddingRight="10dip" >
        
	    <TextView 
	        android:textSize="18.0sp"
	        android:textColor="@android:color/white"
	        android:background="#000000"
	        android:padding="12.0dip"
	        android:layout_width="wrap_content"
	        android:layout_height="46.0dip"
	        android:layout_gravity="center"
	        android:text="常见病"/>
	    
		</FrameLayout>
		
        <ScrollView 
            android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="@color/info_panel_bg"
		    android:scrollbarThumbVertical="@drawable/scrollbar_handle_vertical"
		    android:layout_weight="1.0">
            
            <LinearLayout 
                android:orientation="vertical" 
	      		android:paddingBottom="10.0dip"
	      		android:background="@color/base_bg" 
	      		android:layout_width="fill_parent" 
	      		android:layout_height="fill_parent" 
	      		android:isScrollContainer="true">
                
                <!-- 白癜风 -->
			    <LinearLayout 
			        android:gravity="center_vertical"
			        android:orientation="vertical" 
					android:background="@drawable/shape_bg" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:layout_marginLeft="10.0dip" 
					android:layout_marginTop="7.0dip" 
					android:layout_marginRight="10.0dip">
			        
			        <LinearLayout 
			            android:gravity="center_vertical" 
	               		android:orientation="horizontal" 
	               		android:layout_width="fill_parent" 
	              		android:layout_height="wrap_content" 
	               		android:padding="10.0dip" 
	               		android:minHeight="50.0dip">
			            
			            <TextView 
			                android:textSize="18.0sp" 
			                android:textColor="@android:color/black" 
			                android:paddingLeft="5.0dip" 
			                android:layout_width="wrap_content" 
			                android:layout_height="wrap_content" 
			                android:text="病名" />
	                    
			            <TextView 
		                    android:id = "@+id/jibing1"
		                    android:textSize="18.0sp" 
		                    android:textColor="#ff545454" 
		                    android:layout_marginLeft="10.0dip" 
		                    android:layout_marginRight="10.0dip" 
		                	android:clickable="true"
		                    android:layout_width="0.0dip"
		                    android:layout_height="wrap_content"                
		                    android:text="白癜风"               
		                    android:maxLines="1"
		                    android:maxLength="10"
		      				android:background="@android:color/white"
		      				android:layout_weight="1.0"/>
			            
			            
			            
			        </LinearLayout>
			        
			        <View 
		           		android:background="@drawable/shape_line" 
		           		android:layout_width="fill_parent" 
		           		android:layout_height="1.0px" />
			        
			        <LinearLayout 
			            android:gravity="center_vertical" 
	               		android:orientation="horizontal" 
	               		android:layout_width="fill_parent" 
	              		android:layout_height="wrap_content" 
	               		android:padding="10.0dip" 
	               		android:minHeight="50.0dip">
			            
			            <TextView 
			                android:textSize="18.0sp" 
			                android:textColor="@android:color/black" 
			                android:paddingLeft="5.0dip" 
			                android:layout_width="wrap_content" 
			                android:layout_height="wrap_content" 
			                android:text="简介" />
	                    
			            <TextView 
		                    android:id = "@+id/person_num"
		                    android:textSize="18.0sp" 
		                    android:textColor="#ff545454" 
		                    android:layout_marginLeft="10.0dip" 
		                    android:layout_marginRight="10.0dip" 
		                	android:clickable="false"
		                    android:layout_width="0.0dip"
		                    android:layout_height="wrap_content"                
		                    android:text="@string/yaoming_baidianfeng"               
		                    android:maxLength="10"
		      				android:background="@android:color/white"
		      				android:layout_weight="1.0"/>
			            
			        </LinearLayout>
			    </LinearLayout>
			    
			    <!-- 白内障 -->
			    <LinearLayout 
			        android:gravity="center_vertical"
			        android:orientation="vertical" 
					android:background="@drawable/shape_bg" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:layout_marginLeft="10.0dip" 
					android:layout_marginTop="7.0dip" 
					android:layout_marginRight="10.0dip">
			        
			        <LinearLayout 
			            android:gravity="center_vertical" 
	               		android:orientation="horizontal" 
	               		android:layout_width="fill_parent" 
	              		android:layout_height="wrap_content" 
	               		android:padding="10.0dip" 
	               		android:minHeight="50.0dip">
			            
			            <TextView 
			                android:textSize="18.0sp" 
			                android:textColor="@android:color/black" 
			                android:paddingLeft="5.0dip" 
			                android:layout_width="wrap_content" 
			                android:layout_height="wrap_content" 
			                android:text="病名" />
	                    
			            <TextView 
		                    android:id = "@+id/jibing2"
		                    android:textSize="18.0sp" 
		                    android:textColor="#ff545454" 
		                    android:layout_marginLeft="10.0dip" 
		                    android:layout_marginRight="10.0dip" 
		                	android:clickable="true"
		                    android:layout_width="0.0dip"
		                    android:layout_height="wrap_content"                
		                    android:text="白内障"               
		                    android:maxLines="1"
		                    android:maxLength="10"
		      				android:background="@android:color/white"
		      				android:layout_weight="1.0"/>
			        </LinearLayout>
			        
			        <View 
		           		android:background="@drawable/shape_line" 
		           		android:layout_width="fill_parent" 
		           		android:layout_height="1.0px" />
			        
			        <LinearLayout 
			            android:gravity="center_vertical" 
	               		android:orientation="horizontal" 
	               		android:layout_width="fill_parent" 
	              		android:layout_height="wrap_content" 
	               		android:padding="10.0dip" 
	               		android:minHeight="50.0dip">
			            
			            <TextView 
			                android:textSize="18.0sp" 
			                android:textColor="@android:color/black" 
			                android:paddingLeft="5.0dip" 
			                android:layout_width="wrap_content" 
			                android:layout_height="wrap_content" 
			                android:text="简介" />
	                    
			            <TextView 
		                    android:id = "@+id/person_num"
		                    android:textSize="18.0sp" 
		                    android:textColor="#ff545454" 
		                    android:layout_marginLeft="10.0dip" 
		                    android:layout_marginRight="10.0dip" 
		                	android:clickable="false"
		                    android:layout_width="0.0dip"
		                    android:layout_height="wrap_content"                
		                    android:text="@string/yaoming_baineizhang"               
		                    android:maxLength="10"
		      				android:background="@android:color/white"
		      				android:layout_weight="1.0"/>
			            
			        </LinearLayout>
			    </LinearLayout>
			    
			    <!-- 鼻骨骨折 -->
			    <LinearLayout 
			        android:gravity="center_vertical"
			        android:orientation="vertical" 
					android:background="@drawable/shape_bg" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:layout_marginLeft="10.0dip" 
					android:layout_marginTop="7.0dip" 
					android:layout_marginRight="10.0dip">
			        
			        <LinearLayout 
			            android:gravity="center_vertical" 
	               		android:orientation="horizontal" 
	               		android:layout_width="fill_parent" 
	              		android:layout_height="wrap_content" 
	               		android:padding="10.0dip" 
	               		android:minHeight="50.0dip">
			            
			            <TextView 
			                android:textSize="18.0sp" 
			                android:textColor="@android:color/black" 
			                android:paddingLeft="5.0dip" 
			                android:layout_width="wrap_content" 
			                android:layout_height="wrap_content" 
			                android:text="病名" />
	                    
			            <TextView 
		                    android:id = "@+id/jibing3"
		                    android:textSize="18.0sp" 
		                    android:textColor="#ff545454" 
		                    android:layout_marginLeft="10.0dip" 
		                    android:layout_marginRight="10.0dip" 
		                	android:clickable="true"
		                    android:layout_width="0.0dip"
		                    android:layout_height="wrap_content"                
		                    android:text="鼻骨骨折"               
		                    android:maxLines="1"
		                    android:maxLength="10"
		      				android:background="@android:color/white"
		      				android:layout_weight="1.0"/>
			        </LinearLayout>
			        
			        <View 
		           		android:background="@drawable/shape_line" 
		           		android:layout_width="fill_parent" 
		           		android:layout_height="1.0px" />
			        
			        <LinearLayout 
			            android:gravity="center_vertical" 
	               		android:orientation="horizontal" 
	               		android:layout_width="fill_parent" 
	              		android:layout_height="wrap_content" 
	               		android:padding="10.0dip" 
	               		android:minHeight="50.0dip">
			            
			            <TextView 
			                android:textSize="18.0sp" 
			                android:textColor="@android:color/black" 
			                android:paddingLeft="5.0dip" 
			                android:layout_width="wrap_content" 
			                android:layout_height="wrap_content" 
			                android:text="简介" />
	                    
			            <TextView 
		                    android:id = "@+id/person_num"
		                    android:textSize="18.0sp" 
		                    android:textColor="#ff545454" 
		                    android:layout_marginLeft="10.0dip" 
		                    android:layout_marginRight="10.0dip" 
		                	android:clickable="false"
		                    android:layout_width="0.0dip"
		                    android:layout_height="wrap_content"                
		                    android:text="@string/yaoming_bigugezhe"               
		                    android:maxLength="10"
		      				android:background="@android:color/white"
		      				android:layout_weight="1.0"/>
			            
			        </LinearLayout>
			    </LinearLayout>
                
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
